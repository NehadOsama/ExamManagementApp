@model CemexExamApp.ViewModel.ExamViewModel

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 style="color:crimson" class="text-center">Exam Management</h3>
<h2 style="color:navy">Exam Search</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        @if (ViewBag.Message != null)
        {
            <h3 class="alert alert-success">@ViewBag.Message</h3>
        }
    </div>
</div>
<div class="row">
    <div class="offset-3 col-md-7 text-center">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TrainingName" class="col-form-label fw-bold"></label>
                <input asp-for="TrainingName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ValidityDateFrom" class="col-form-label fw-bold"></label>
                <input asp-for="ValidityDateFrom" type="date" id="txtValFromDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ValidityDateTo" class="col-form-label fw-bold"></label>
                <input asp-for="ValidityDateTo" type="date" id="txtValToDate" class="form-control" />
            
            </div>
            <div class="form-group">
                <label asp-for="LevelID" class="col-form-label fw-bold"></label>
                <select asp-for="LevelID" class="form-control text-center" asp-items="ViewBag.LevelID">
                    <option value="-1" class="text-center">-- Select level--</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary  form-control-lg" /> |
                <a asp-action="Index" class="btn btn-info">Back to Exam List</a>
            </div>
        </form>
    </div>
</div>

