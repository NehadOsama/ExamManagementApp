        var today = new Date().toISOString().split('T')[0];
        console.log(today);
   $('#txtTrainFromDate').prop('min', today);
   $('#txtTrainToDate').prop('min', today);
   $('#txtValFromDate').prop('min', today);
   $('#txtValToDate').prop('min', today);

    

        $("#myCheck").click(function (e) {
           
                if ($("#myCheck").is(":checked")) {
                    console.log("checked");
                    $("#btnNeedTakerUpdate").prop('hidden', false);
                    $("#btnNeedTakerUpdate2").prop('hidden', false);
                }
                else {
                    console.log("unchecked");
                    $("#btnNeedTakerUpdate").prop('hidden', true);
                    $("#btnNeedTakerUpdate2").prop('hidden', true);
                }
            

        });

